rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isPlatformAdmin() {
      return isSignedIn() && request.auth.token.platform_admin == true;
    }

    function getUserData(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }

    function isStaffOfTenant(tenantId) {
      // Checks if the user is signed in, belongs to the specified tenant, and has a valid staff role.
      return isSignedIn() &&
             getUserData(request.auth.uid).tenantId == tenantId &&
             (getUserData(request.auth.uid).role in ['manager', 'barista', 'service', 'cashier']);
    }

    function isManagerOfTenant(tenantId) {
      // Checks if the user is signed in, belongs to the specified tenant, and has the 'manager' role.
      return isSignedIn() &&
             getUserData(request.auth.uid).tenantId == tenantId &&
             getUserData(request.auth.uid).role == 'manager';
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Rules for top-level collections
    match /tenants/{tenantId} {
      allow get: if isStaffOfTenant(tenantId) || isPlatformAdmin();
      allow list: if isPlatformAdmin();
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid || isPlatformAdmin();
      allow update: if isManagerOfTenant(tenantId) || isPlatformAdmin();
      allow delete: if isPlatformAdmin();
    }

    match /users/{userId} {
      allow get: if isOwner(userId) || isPlatformAdmin() || (isManagerOfTenant(getUserData(userId).tenantId) && getUserData(userId).tenantId != null);
      allow list: if isPlatformAdmin();
      allow create: if isSignedIn(); // Allow any signed-in user to create their own profile
      // Allow users to update their own profile, or managers to update profiles of users within their tenant, or admins to update any profile.
      allow update: if isOwner(userId) || isPlatformAdmin() || (isManagerOfTenant(resource.data.tenantId));
      allow delete: if isPlatformAdmin();
    }
    
    match /subscription_plans/{planId} {
      allow read: if isSignedIn();
      allow write: if isPlatformAdmin();
    }
    
    match /invitations/{invitationId} {
        // This rule allows both managers and invited users to list invitations.
        // It is not perfectly secure, as any authenticated user could query this collection
        // if they bypass the client-side code. However, it's necessary for the
        // current data model to allow managers to see their pending invites and
        // for users to discover invites sent to their email.
        allow list, get: if isSignedIn();
        
        // A manager can create an invitation for their own tenant.
        allow create: if isManagerOfTenant(request.resource.data.tenantId);
        
        // A manager can delete invitations for their tenant.
        allow delete: if isManagerOfTenant(resource.data.tenantId);
        
        // An invited user can update their own invitation (e.g., to accept/decline it).
        allow update: if isSignedIn() && request.auth.token.email == resource.data.email;
    }
    
    match /support_tickets/{ticketId} {
      allow read, update: if isPlatformAdmin();
      allow create: if isManagerOfTenant(request.resource.data.tenantId);
    }

    // Tenant-specific sub-collections
    match /tenants/{tenantId}/menu_categories/{categoryId} {
      allow read: if true; // Publicly readable
      allow write: if isManagerOfTenant(tenantId) || isPlatformAdmin();
    }
    match /tenants/{tenantId}/menu_items/{itemId} {
      allow read: if true; // Publicly readable
      allow write: if isManagerOfTenant(tenantId) || isPlatformAdmin();
    }
    match /tenants/{tenantId}/modifier_groups/{modifierGroupId} {
      allow read: if true; // Publicly readable
      allow write: if isManagerOfTenant(tenantId) || isPlatformAdmin();
    }
    match /tenants/{tenantId}/locations/{locationId} {
      allow read: if isStaffOfTenant(tenantId) || isPlatformAdmin();
      allow write: if isManagerOfTenant(tenantId) || isPlatformAdmin();
    }
    match /tenants/{tenantId}/tables/{tableId} {
      allow get: if true; // Publicly readable for QR code scanning
      allow list: if isStaffOfTenant(tenantId) || isPlatformAdmin();
      allow write: if isManagerOfTenant(tenantId) || isPlatformAdmin();
    }
    match /tenants/{tenantId}/orders/{orderId} {
      allow get: if isStaffOfTenant(tenantId) || isPlatformAdmin() || (isSignedIn() && resource.data.customerId == request.auth.uid);
      allow list: if isStaffOfTenant(tenantId) || isPlatformAdmin();
      allow create: if isSignedIn();
      allow update: if isStaffOfTenant(tenantId) || isPlatformAdmin() || (isSignedIn() && resource.data.customerId == request.auth.uid);
      allow delete: if isManagerOfTenant(tenantId) || isPlatformAdmin();
    }
    match /tenants/{tenantId}/roles/{roleId} {
      allow read, write: if isManagerOfTenant(tenantId) || isPlatformAdmin();
    }
    match /tenants/{tenantId}/api_keys/{apiKeyId} {
      allow read, write: if isManagerOfTenant(tenantId) || isPlatformAdmin();
    }
    match /tenants/{tenantId}/shifts/{shiftId} {
      allow read, write: if isStaffOfTenant(tenantId);
    }
  }
}
