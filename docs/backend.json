{
  "entities": {
    "Tenant": {
      "title": "Tenant",
      "type": "object",
      "description": "Represents a business entity (e.g., a caf√©, restaurant) subscribed to the Qordia platform.",
      "properties": {
        "id": { "type": "string", "description": "Unique identifier for the Tenant." },
        "name": { "type": "string", "description": "The name of the business." },
        "ownerId": { "type": "string", "description": "The Firebase UID of the user who owns this tenant." },
        "createdAt": { "type": "string", "format": "date-time" },
        "planId": { "type": "string", "description": "The ID of the subscription plan this tenant is on." },
        "subscriptionStatus": { "type": "string", "enum": ["active", "trialing", "overdue", "canceled"] },
        "nextBillingDate": { "type": "string", "format": "date-time" },
        "staffUids": { "type": "array", "items": { "type": "string" }, "description": "List of Firebase UIDs for staff members of this tenant." },
        "shopType": {
          "type": "string",
          "enum": ["cafe", "coffee_shop", "food_court", "small_restaurant"],
          "description": "The type of the business establishment."
        },
        "logoUrl": {
            "type": "string",
            "format": "uri",
            "description": "URL of the business logo."
        },
        "priceOverride": {
          "type": "number",
          "description": "Custom monthly price for this tenant, overriding the plan's default price."
        },
        "notes": {
            "type": "string",
            "description": "Administrative notes for this tenant, e.g., billing adjustments or credits."
        }
      },
      "required": ["id", "name", "ownerId"]
    },
    "UserProfile": {
      "title": "UserProfile",
      "type": "object",
      "description": "Represents a user of the Qordia platform, including customers and staff.",
      "properties": {
        "id": { "type": "string", "description": "Matches the Firebase Auth UID." },
        "email": { "type": "string", "format": "email" },
        "name": { "type": "string" },
        "role": {
          "type": "string",
          "enum": ["customer", "barista", "service", "cashier", "manager", "platform_admin"],
          "description": "The user's role within the system."
        },
        "tenantId": { "type": "string", "description": "The tenant this user belongs to. Null for customers and platform_admins." },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "role"]
    },
    "Location": {
      "title": "Location",
      "type": "object",
      "description": "A specific outlet or branch of a Tenant.",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "address": { "type": "string" }
      },
      "required": ["id", "name"]
    },
    "Table": {
      "title": "Table",
      "type": "object",
      "description": "A specific table or seating area within a Location.",
      "properties": {
        "id": { "type": "string" },
        "tableNumber": { "type": "string" },
        "qrCodeIdentifier": { "type": "string" }
      },
      "required": ["id", "tableNumber"]
    },
    "MenuCategory": {
      "title": "MenuCategory",
      "type": "object",
      "description": "A category for organizing menu items.",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "displayOrder": { "type": "number" },
        "isActive": { "type": "boolean", "description": "Controls if the category is visible to customers." }
      },
      "required": ["id", "name", "isActive"]
    },
    "MenuItem": {
      "title": "MenuItem",
      "type": "object",
      "description": "A single food or drink item on the menu.",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "description": { "type": "string" },
        "price": { "type": "number" },
        "imageUrl": { "type": "string", "format": "uri" },
        "isAvailable": { "type": "boolean" },
        "categoryId": { "type": "string" }
      },
      "required": ["id", "name", "price", "isAvailable", "categoryId"]
    },
    "Order": {
      "title": "Order",
      "type": "object",
      "description": "A customer's placed order.",
      "properties": {
        "id": { "type": "string" },
        "customerId": { "type": "string" },
        "tableId": { "type": "string" },
        "status": {
          "type": "string",
          "enum": ["Placed", "In Progress", "Ready", "Served", "Completed", "Refunded"]
        },
        "totalAmount": { "type": "number" },
        "orderedAt": { "type": "string", "format": "date-time" },
        "items": {
          "type": "array",
          "description": "The items included in the order.",
          "items": {
            "type": "object",
            "properties": {
              "menuItemId": { "type": "string" },
              "name": { "type": "string" },
              "quantity": { "type": "number" },
              "customizations": { "type": "object" },
              "specialNotes": { "type": "string" },
              "price": { "type": "number" }
            },
            "required": ["menuItemId", "name", "quantity", "price"]
          }
        },
        "refundDetails": {
          "type": "object",
          "description": "Details of a refund if the order was refunded.",
          "properties": {
            "refundAmount": { "type": "number" },
            "reason": { "type": "string" },
            "processedAt": { "type": "string", "format": "date-time" },
            "processedByUid": { "type": "string" }
          }
        }
      },
      "required": [
        "customerId",
        "tableId",
        "status",
        "totalAmount",
        "orderedAt",
        "items"
      ]
    },
    "SubscriptionPlan": {
      "title": "Subscription Plan",
      "type": "object",
      "description": "Defines a subscription tier for tenants.",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "price": { "type": "number", "description": "Monthly price in USD." },
        "features": { "type": "array", "items": { "type": "string" } },
        "tableLimit": { "type": "number", "description": "The maximum number of tables this plan allows. 0 for unlimited." }
      },
      "required": ["id", "name", "price"]
    },
    "CustomRole": {
      "title": "Custom Role",
      "type": "object",
      "description": "A custom role defined by a tenant manager with specific permissions.",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "permissions": {
          "type": "array",
          "items": { "type": "string" },
          "description": "A list of permission keys (e.g., 'manage_menu')."
        }
      },
      "required": ["name", "permissions"]
    },
    "Invitation": {
      "title": "Invitation",
      "type": "object",
      "description": "An invitation for a user to join a tenant as a staff member.",
      "properties": {
        "id": { "type": "string" },
        "tenantId": { "type": "string" },
        "tenantName": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "role": { "type": "string" },
        "status": { "type": "string", "enum": ["pending", "accepted", "declined"] },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["tenantId", "email", "role", "status"]
    },
    "ApiKey": {
      "title": "API Key",
      "type": "object",
      "description": "Metadata for an API key generated by a tenant manager.",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "keyPrefix": { "type": "string" },
        "keyTruncated": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["name", "keyPrefix", "keyTruncated", "createdAt"]
    },
    "SupportTicket": {
      "title": "Support Ticket",
      "type": "object",
      "description": "A support request submitted by a tenant manager.",
      "properties": {
        "id": { "type": "string" },
        "tenantId": { "type": "string" },
        "tenantName": { "type": "string" },
        "submittedByUid": { "type": "string" },
        "subject": { "type": "string" },
        "message": { "type": "string" },
        "priority": { "type": "string", "enum": ["normal", "high", "urgent"] },
        "status": { "type": "string", "enum": ["new", "in-progress", "resolved"] },
        "createdAt": { "type": "string", "format": "date-time" },
        "resolvedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["tenantId", "tenantName", "submittedByUid", "subject", "message", "priority", "status", "createdAt"]
    },
    "Shift": {
      "title": "Shift",
      "type": "object",
      "description": "Represents a cashier's work shift, tracking sales and cash.",
      "properties": {
        "id": { "type": "string" },
        "tenantId": { "type": "string" },
        "cashierId": { "type": "string" },
        "status": { "type": "string", "enum": ["active", "closed"] },
        "startedAt": { "type": "string", "format": "date-time" },
        "endedAt": { "type": "string", "format": "date-time" },
        "totalOrders": { "type": "number" },
        "totalSales": { "type": "number" },
        "totalRefunds": { "type": "number" },
        "declaredCash": { "type": "number" },
        "variance": { "type": "number" }
      },
      "required": ["tenantId", "cashierId", "status", "startedAt"]
    }
  },
  "auth": {
    "providers": ["password", "anonymous", "google"]
  },
  "firestore": {
    "structure": [
      {
        "path": "/tenants/{tenantId}",
        "definition": { "schema": { "$ref": "#/entities/Tenant" }, "description": "Top-level collection for all business tenants." }
      },
      {
        "path": "/users/{userId}",
        "definition": { "schema": { "$ref": "#/entities/UserProfile" }, "description": "Top-level collection for all user profiles." }
      },
      {
        "path": "/subscription_plans/{planId}",
        "definition": { "schema": { "$ref": "#/entities/SubscriptionPlan" }, "description": "Available subscription plans for tenants." }
      },
      {
        "path": "/invitations/{invitationId}",
        "definition": { "schema": { "$ref": "#/entities/Invitation" }, "description": "Pending and completed staff invitations." }
      },
      {
        "path": "/support_tickets/{ticketId}",
        "definition": { "schema": { "$ref": "#/entities/SupportTicket" }, "description": "Support tickets submitted by tenant managers." }
      },
      {
        "path": "/tenants/{tenantId}/locations/{locationId}",
        "definition": { "schema": { "$ref": "#/entities/Location" }, "description": "Locations belonging to a specific tenant." }
      },
      {
        "path": "/tenants/{tenantId}/tables/{tableId}",
        "definition": { "schema": { "$ref": "#/entities/Table" }, "description": "Tables belonging to a specific tenant." }
      },
      {
        "path": "/tenants/{tenantId}/menu_categories/{menuCategoryId}",
        "definition": { "schema": { "$ref": "#/entities/MenuCategory" }, "description": "Menu categories for a specific tenant." }
      },
      {
        "path": "/tenants/{tenantId}/menu_items/{menuItemId}",
        "definition": { "schema": { "$ref": "#/entities/MenuItem" }, "description": "Menu items for a specific tenant." }
      },
      {
        "path": "/tenants/{tenantId}/orders/{orderId}",
        "definition": { "schema": { "$ref": "#/entities/Order" }, "description": "Orders placed within a specific tenant." }
      },
      {
        "path": "/tenants/{tenantId}/roles/{roleId}",
        "definition": { "schema": { "$ref": "#/entities/CustomRole" }, "description": "Custom roles defined by a tenant manager." }
      },
      {
        "path": "/tenants/{tenantId}/api_keys/{apiKeyId}",
        "definition": { "schema": { "$ref": "#/entities/ApiKey" }, "description": "API key metadata for a specific tenant." }
      },
      {
        "path": "/tenants/{tenantId}/shifts/{shiftId}",
        "definition": { "schema": { "$ref": "#/entities/Shift" }, "description": "Cashier shifts for a specific tenant." }
      }
    ],
    "reasoning": "The data model is structured for multi-tenancy. All business-specific data (menus, orders, tables) is nested within a `/tenants/{tenantId}` document path. This allows Firestore security rules to enforce strict data isolation between different businesses. A top-level `/users` collection stores profiles for all users across the platform, with roles and tenant associations managed within each user's document, which will be used to set custom claims for role-based access control. A `/subscription_plans` collection is added for SaaS billing."
  }
}
